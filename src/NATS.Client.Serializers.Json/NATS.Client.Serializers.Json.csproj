<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- NuGet Packaging -->
    <PackageTags>pubsub;messaging</PackageTags>
    <Description>NATS client generic JSON serializer. Not suitable for native AOT deployments.</Description>

    <IsTrimmable>false</IsTrimmable>
    <IsAotCompatible>false</IsAotCompatible>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\NATS.Client.Abstractions\NATS.Client.Abstractions.csproj" />
  </ItemGroup>

    <!--  Dependencies for net6.0 and net8.0 only -->
    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0' OR '$(TargetFramework)' == 'netstandard2.1'">
        <PackageReference Include="System.Text.Json" Version="8.0.5"/>
    </ItemGroup>
    
</Project>
